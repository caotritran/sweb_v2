[{{ user_domain }}1]

listen = /var/run/php-fpm.{{ server_name }}.sock1
 ;listen.backlog = -1

 ; Unix user/group of processes
user = {{ user_domain }}
group = {{ user_domain }}

 ; Choose how the process manager will control the number of child processes.
pm = ondemand
pm.max_children = 2
pm.max_requests = 250
pm.process_idle_timeout = 10s
php_admin_flag[log_errors] = on
slowlog = /home/{{ user_domain }}/domains/{{ server_name }}/logs/php-slow.log
request_slowlog_timeout = 5s

listen.owner = {{ user_domain }}
listen.group = nobody
listen.mode = 0666

